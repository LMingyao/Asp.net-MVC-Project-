@model IEnumerable<RentalWebAppR.Models.Building>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout _Client.cshtml";
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <!-- custom css link -->
    <link rel="stylesheet" href="~/Stack/css/style.css" />
}

<h2>Buildings in this address...</h2>

<p>
    Please confirm it -->
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BuildingName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address.StreetName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BuildingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.StreetName)
            </td>
            <td>
                @Html.ActionLink("Confirm", "UserSelectApartment", new { id = item.BuildingId })
            </td>
        </tr>
    }

</table>
